# Brightness control
XF86MonBrightness{Down,Up}
    xbacklight {-dec,-inc} 10

# Volume control
XF86AudioMute
    amixer -q sset Master toggle

XF86Audio{Lower,Raise}Volume
    amixer -q sset Master 3%{-,+}

# Locking the screen
super + shift + l
    betterlockscreen -l

# Application shortcuts
super + {w, s, i, c}
    {brave, slack, insomnia, brave --new-window https://ivido.slack.com https://mail.google.com https://calendar.google.com}

# Screenshots
Print
    maim -s | xclip -selection clipboard -t image/png
