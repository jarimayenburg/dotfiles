# Brightness control
XF86MonBrightness{Down,Up}
    xbacklight {-dec,-inc} 10

# Volume control
XF86AudioMute
    amixer -q sset Master toggle && kill -s SIGUSR1 $(pgrep statusbard)

XF86Audio{Lower,Raise}Volume
    amixer -q sset Master 5%{-,+} && kill -s SIGUSR1 $(pgrep statusbard)

# Lock the screen
super + shift + l
    betterlockscreen -l

# Change the wallpaper
super + F7
    pkill randwald; randwald &

# Save the current wallpaper to the wallpaper folder
super + shift + F7
    savewal

# Application shortcuts
super + {w, s, i, c}
    {brave, slack, insomnia, slack}

# Screenshots
Print
    maim -s | xclip -selection clipboard -t image/png
