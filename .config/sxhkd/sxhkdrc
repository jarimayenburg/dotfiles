# Brightness control
XF86MonBrightness{Down,Up}
    xbacklight {-dec,-inc} 10

# Volume control
XF86AudioMute
    amixer -q sset Master toggle

XF86Audio{Lower,Raise}Volume
    amixer -q sset Master 3%{-,+}

# Locking the screen
Scroll_Lock
    betterlockscreen -l

# Browser
super + w
    firefox

# Screenshots
Print
    maim -s | xclip -selection clipboard -t image/png
