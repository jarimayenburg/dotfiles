# Brightness control
XF86MonBrightness{Down,Up}
    xbacklight {-dec,-inc} 10

# Volume control
XF86AudioMute
    amixer -q sset Master toggle

XF86Audio{Lower,Raise}Volume
    amixer -q sset Master 3%{-,+}

# Lock the screen
super + shift + l
    betterlockscreen -l

# Change the wallpaper
super + F7
    pkill randwald; randwald &

# Save the current wallpaper to the 
super + shift + F7
    savewal

# Application shortcuts
super + {w, s, i, c}
    {brave, slack, insomnia, slack}

# Screenshots
Print
    maim -s | xclip -selection clipboard -t image/png
