! Set the system font
font: Source Code Pro:size=12:antialias=true:hinting=true! Clickable URLs
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1! Scrollbars
URxvt.scrollBar: false! Transparency
!URxvt.transparent: true
!URxvt.shading: 20
!URxvt.depth: 32
!URxvt.background: rgba:0000/0000/0000/c800! Stop automatic terminal scrolling
URxvt*scrollTtyOutput:   false
URxvt*scrollWithBuffer:  true
URxvt*scrollTtyKeypress: true! Increase maximum lines to be shown in the terminal
URxvt*saveLines: 20000! ===== Terminal Coloring =====! Default coloring
